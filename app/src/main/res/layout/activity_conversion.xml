<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.priya.shapes.Conversion">

    <Spinner
        android:id="@+id/sp2"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="52dp" />

    <Spinner
        android:id="@+id/sp3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sp2"
        android:layout_marginStart="29dp"
        android:layout_marginTop="87dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="121dp" />

    <Spinner
        android:id="@+id/sp4"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/sp3"
        android:layout_alignBottom="@+id/sp3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="121dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/sp3"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sp2"
        android:layout_below="@+id/editText4"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="48dp"
        android:text="Convert" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/sp4"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>
